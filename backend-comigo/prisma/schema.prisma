datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id          Int      @id @default(autoincrement())
  type        Type
  reason      String
  description String
  costumer    String
  vehicle     String
  status      Status   @default(TODO)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignedTo  User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role     @default(ATTENDANT)
  tickets  Ticket[]
}

enum Type {
  SUPPORT
  SELLING
  OPERATIONAL
}

enum Role {
  ADMIN
  ATTENDANT
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
